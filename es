git init                   # تهيئة مجلد المشروع كـ Git
git add .                  # إضافة كل الملفات إلى Git
git commit -m "Initial commit"  # إنشاء نسخة أولية
git branch -M main          # تحويل الفرع الرئيسي إلى main
git remote add origin https://github.com/USERNAME/REPO_NAME.git
git push -u origin main     # رفع الملفات إلى GitHub
